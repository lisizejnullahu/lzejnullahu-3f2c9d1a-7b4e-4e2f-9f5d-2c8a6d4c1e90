{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "@secure-task-management/data": ["libs/data/src/index.ts"],
      "@secure-task-management/auth": ["libs/auth/src/index.ts"]
    }
  },
  "include": ["src/seed.ts", "src/entities/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
